<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data>
  <!-- explicit list product template view definition -->
    <record id="product_template_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.template.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position = "after">
              <field name="last_purchase_price" widget='monetary' options="{'currency_field': 'cost_currency_id'}" optional="show" readonly="1"/>
              <field name="last_purchase_date" widget='date'/>
            </xpath>
        </field>
    </record>
   <!-- explicit form product template view definition --> 
    <record id="product_template_form_view_inherit" model="ir.ui.view">
      <field name="name">product.template.form.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='categ_id']" position="before">
          <field name="last_purchase_price" widget='monetary' options="{'currency_field': 'cost_currency_id'}" readonly="1" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
          <field name="last_purchase_date" widget='date' attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
        </xpath>
      </field>     
    </record>

  <!-- explicit list product product view definition -->
    <record id="product_product_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.product.tree.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position = "after">
              <field name="last_purchase_price" widget='monetary' options="{'currency_field': 'cost_currency_id'}" optional="show" readonly="1"/>
              <field name="last_purchase_date" widget='date'/>
            </xpath>
        </field>
    </record>
   <!-- explicit form product product view definition -->
    <record id="product_product_view_form_easy_inherit" model="ir.ui.view">
      <field name="name">product.product.view.form.easy.inherit</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='cost_currency_id']" position="after">
          <field name="last_purchase_price" widget='monetary' options="{'currency_field': 'cost_currency_id'}" readonly="1"/>
          <field name="last_purchase_date" widget='date'/>
        </xpath>
      </field>     
    </record> 
  </data>
</odoo>